<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Rental_House_System.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Rental_House_System"
    Shell.FlyoutBehavior="Disabled">

    <TabBar Route="Home">
        <Tab Title="Home">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Search">
            <ShellContent
                Title="Search"
                ContentTemplate="{DataTemplate local:SearchPage}"
                Route="SearchPage" />
        </Tab>
        <Tab Title="Login">
            <ShellContent
                ContentTemplate="{DataTemplate local:LoginPage}"
                Route="LoginPage" />
        </Tab>
        <Tab Title="Account">
            <ShellContent
                Title="Account"
                ContentTemplate="{DataTemplate local:AccountPage}"
                Route="AccountPage" />
        </Tab>
    </TabBar>

</Shell>

